<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
        <h1>Compose ton jardin</h1>
        <%= simple_form_for @kit do %>
          <%   @plants.each do |plant| %>
          <input type="checkbox" id="plant" name="plant[<%= plant.id %>]" value="<%= plant.id %>">
          <label for="plant"><%=plant.name %>, <%= plant.id %></label><br>
          <% end %>
          <%= submit_tag "Valider", class: "active-button" %>
      <% end %>
    </div>
  </div>
</div>



