<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
        <h1>Compose ton jardin</h1>
        <%= form_tag new_kit_path, method: :get do %>
          <%   @plants.each do |plant| %>
          <input type="radio" id="plant" name="plant" value="">
          <label for="plant"><%=plant.name %></label><br>
          <% end %>
          <%= submit_tag "Valider", class: "active-button" %>
      <% end %>
    </div>
  </div>
</div>


