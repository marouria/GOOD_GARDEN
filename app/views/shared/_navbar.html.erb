<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="logo flex-grow-1">
  <%= link_to "#", class: "navbar-brand" do %>
  <h4><%= image_tag "logo.PNG"%><%= " | Good Garden" %></h4>
  <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>

    <div class="navbar-link-position link-background flex-grow-2">
      <h4><%= link_to "Explorer nos plantes", "#", class: "nav-link middle"%></h4>
      <h4><%= link_to "Mon jardin", "#", class: "nav-link middle"%></h4>
      <h4><%= link_to "A propos", "#", class: "nav-link middle"%></h4>
    </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent flex-grow-1">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "tom.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
         <!--  <%= link_to "Login", new_user_session_path, class: "nav-link" %> -->
           <%= link_to new_user_session_path, class: "nav-link " do %>
            <%= image_tag "tom.jpeg", class: "avatar avatar-rounded"%>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
