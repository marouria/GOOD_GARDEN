<% if notice %>
  <div class=" alert alert-success alert-dismissible fade show m-5 hideMe" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" data-auto-dismiss="2000" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible fade show m-5 hideMe" role="alert">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" data-auto-dismiss="2000" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
