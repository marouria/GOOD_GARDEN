<div class="container ">
      <h1>Recapitulatif de ma commande</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Quantité</th>
            <th scope="col">Produit</th>
            <th scope="col">Total</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <th scope="row">kit de <%= @order.kit.slot %> emplacements</th>
            <th scope="row"><%= humanized_money_with_symbol @order.amount %></th>
          </tr>
        </tbody>
      </table>

      <div class="d-flex bg-secondary">
        <%= image_tag "tool-kit.jpg", style:"width:250px" %>
        <div class="card-info bg-light">
          <h3>Kit d'outils</h3>
          <p>Vous avez mentionnez ne pas disposer d'outils. Voulez-vous ajouter notre kit outils composé de : à votre commande ?</p>
          <button class="active-button">Ajouter</button>
        </div>
      </div>

      <a href="" onclick="history.go(-1)" class="inactive-button mr-5">Retour</a>
      <button id="pay" class="active-button">Payer</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
</div>
