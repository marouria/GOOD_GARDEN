<h1 class="text-center">Toutes nos plantes</h1>
<div class="container cards">
  <% @plants.each do |plant| %>
  <%= link_to plant_path(plant), class: "text-decoration-none" do %>
  <div class="cards-plant">
    <div class="card-plant">
      <div class="card-plant_image"> <img src="<%= plant.img_url %>" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))"/> </div>
        <div class="card-plant_title title-color">
          <h4><%= plant.name %></h4>
        </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>



