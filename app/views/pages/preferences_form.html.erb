<div class="container">

<%= form_tag new_kit_path, method: :get do %>

<div class="question flex-center" id="question-1">
  <h1 class="mb-5">Parles nous de toi</h1>

<div class="question">
  <h2 class="mb-5">En quelle saison veux-tu planter ?</h2>
  <div>
    <!-- <a href="#second"> -->
    <label for="summer">
      <input type="radio" class="hidden-radio" id="summer" name="season" value="summer">
      <%= image_tag "icons/sun.svg", class:'answer-icon clickable' %>
       <!-- </a> -->
    </label>

    <input type="radio" class="hidden-radio" id="winter" name="season" value="winter">
   <!--  <a href="#second"> -->
      <label for="winter"><%= image_tag "icons/snowflake.svg", class:'answer-icon clickable' %></label><br>
    <!-- </a> -->
  </div>
</div>
</div>

<div class="question flex-center" id="question-2">
  <h2 class="mb-5">Quel est ton niveau en jardinage ?</h2>
  <div>
    <input type="radio" class="hidden-radio" id="begin" name="user_level" value="begin">
      <label for="begin"><%= image_tag "icons/leaf.png", class:'answer-icon clickable' %><br>Jeune pousse</label>

    <input type="radio" class="hidden-radio" id="medium" name="user_level" value="medium">
      <label for="medium"><%= image_tag "icons/floral.svg", class:'answer-icon clickable' %><br>Belle plante</label>
    <input type="radio" class="hidden-radio" id="expert" name="user_level" value="expert">
    <label for="expert"><%= image_tag "icons/tree.svg", class:'answer-icon clickable' %><br>Chêne centenaire</label>
  </div>
</div>

<div class="question flex-center" id="question-3">
  <h2 class="mb-5">Combien de plantes veux-tu dans ton carré ?</h2>
  <div>
      <input type="radio" class="hidden-radio" id="2" name="slot" value="2">
      <label for="2"><%= image_tag "icons/slot-2.png", class:'answer-icon clickable' %></label>

      <input type="radio" class="hidden-radio" id="4" name="slot" value="4">
      <label for="4"><%= image_tag "icons/slot-4.png", class:'answer-icon clickable' %></label>

      <input type="radio" class="hidden-radio" id="6" name="slot" value="6">
      <label for="6"><%= image_tag "icons/slot-6.png", class:'answer-icon clickable' %></label><br>

  </div>
</div>


<div class="question flex-center" id="question-4">
  <h2 class="mb-5">As-tu besoin de matériel ? (terreau, outils)</h2>
  <div>
    <input type="radio" class="hidden-radio" id="answer_no" name="tools" value="false">
  <label for="answer_no" class="inactive-button">Non</label>
  <input type="radio" class="hidden-radio" id="answer_yes" name="tools" value="true">
  <label for="answer_yes" class="active-button">Oui</label>
  </div>
</div>

<div class="question flex-center" id="question-5">
  <h2 class="mb-5">Prêt à composer ton jardin ?</h2>
 <%= submit_tag "C'est parti !", class: "active-button", id:"last" %>
 </div>
<% end %>
</div>


